# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Telegram User IDs of Admins (comma separated)
ADMIN_IDS=12345678,98765432

# Database Connection String
# Use sqlite:///qadam_club.db for local development
DATABASE_URL=sqlite:///qadam_club.db

# Secret key for Flask sessions
SECRET_KEY=generate_a_random_secret_key_here

# Backend API URL (use http://backend:5000/api for Docker)
# For local run without Docker, use http://localhost:5000/api
API_URL=http://localhost:5000/api

# PythonAnywhere or your web app domain for Mini App redirection
PYTHONANYWHERE_DOMAIN=https://your-domain.pythonanywhere.com
